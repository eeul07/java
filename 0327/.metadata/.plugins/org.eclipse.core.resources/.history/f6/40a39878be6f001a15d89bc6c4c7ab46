package ex01;

public class Sample {

	public static void main(String[] args) {
		// 변수타입
		int intNum1 = 10, intNum2 = 20;
		double dblNum1 = 10.3, dblNum2 = 20.4;
		char chr1 = 'A', chr2 = 'B';
		String str1 = "홍길동", str2 = "심청이";
		Boolean bol1 = true, bol2 = false;
		
		System.out.println("intNum1 = " + intNum1); // 결과 : intNum1 = 10
		
		
		//연산자
		//1.산술연산자(+, -, *, /, %)
		int intResult1 = intNum1 + intNum2;
		System.out.println("intNum1 + intNum2 = " + intResult1);
		double dblResult1 = dblNum1 + dblNum2;
		System.out.println("dblNum1 + dblNum2 = " + dblResult1);
		int dblResult2 = (int)dblNum1 - (int)dblNum2; // 강제형변환
		System.out.println("dblNum1 - dblNum2 = " + dblResult2);
		
		//비교연산자(==, !=, >=, <=, >, <)
		if(intNum1==intNum2) {
			System.out.println("두 수가 같습니다.");
		}else {
			System.out.println("두 수가 같지 않습니다.");
		} // 결과 : 두 수가 같지 않습니다.

	}

}
