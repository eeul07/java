package ex03;

// 성적관리용 클래스
public class Grade {
	// 필드
	String sno;
	String sname;
	int kor;
	int eng;
	int mat;
	int tot;
	// 생성자
	public Grade(String sno, String sname, int kor, int eng, int mat) {
		super();
		this.sno = sno;
		this.sname = sname;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}
	// 메서드
	void printGrade(Grade g) {
		this.tot = g.kor + g.eng + g.mat;
		System.out.print(g.sno + "\t" + g.sname + "\t" + g.kor + "\t" + g.eng + "\t" + g.mat + "\t" + g.tot);
		System.out.println();
	}
} // class
