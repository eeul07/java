package ex01;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		method1();
		}

	public static void method1() {
		//이름, 국어, 영어, 수학 키보드에서 입력
				//총점, 평균 출력
				
				Scanner s=new Scanner(System.in);
				System.out.print("이름>");
				String name=s.next();
				System.out.print("국어>");
				int kor=s.nextInt();
				System.out.print("영어>");
				int eng=s.nextInt();
				System.out.print("수학>");
				int mat=s.nextInt();
				
				int sum=kor+eng+mat;
				double avg=(double)sum/3;
				
				System.out.println("총점:" + sum);
				System.out.println("평균:" + avg);
	}
}
