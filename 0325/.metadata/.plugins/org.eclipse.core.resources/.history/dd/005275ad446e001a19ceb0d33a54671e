package ex03;

import java.util.Scanner;

public class Sample {

	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		System.out.print("1.증속");
		System.out.print("2.감속");
		System.out.print("3.중지\n");
		int menu=s.nextInt();
		int i=0;
		boolean run=true;
		
		while(run) {
			
		switch(menu) {
		case 1:
			int speed=i+1;
			System.out.println("현재속도:" + speed);
			break;
		case 2:
			speed=i-1;
			System.out.println("현재속도:" + speed);
			break;
		case 3:
			run=false;
			System.out.println("중지되었습니다");
			break;
		default:
			System.out.println("잘못된입력입니다");
			
		}
		}
	}

}
