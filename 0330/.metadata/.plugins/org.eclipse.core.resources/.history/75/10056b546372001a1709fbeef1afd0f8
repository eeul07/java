package ex03;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.Scanner;

public class Sample {

	public static void main(String[] args)throws Exception {
		Scanner s=new Scanner(System.in);
		boolean run=true;
		String driver = "oracle.jdbc.driver.OracleDriver";
		String url = "jdbc:oracle:thin:@localhost:1521:xe";
		String user = "system";
		String password = "1234";

		Class.forName(driver);
		Connection con=DriverManager.getConnection(url, user, password);
		
		while(run) {
			System.out.println("---------------------------------------------");
			System.out.println("1.상품등록 | 2.상품목록 | 3.상품수정 | 4.종료");
			System.out.println("---------------------------------------------");
			System.out.print("선택>");
			int menu=s.nextInt();
			
			switch(menu) {
			case 1:
				System.out.println("---------------------------------------------");
				System.out.println("상품입력");
				System.out.println("---------------------------------------------");
				System.out.print("상품번호>");
				String sno=s.next();
				System.out.print("상품명>");
				String sname=s.next();
				System.out.print("단가>");
				int price=s.nextInt();
				System.out.print("수량>");
				int stock=s.nextInt();
				String sql="insert into tbl_seller(sno, sname, price, stock) values(?, ?, ?, ?)";
				PreparedStatement ps=con.prepareStatement(sql);
				ps.setString(1, sno);
				ps.setString(2, sname);
				ps.setInt(3, price);
				ps.setInt(4, stock);
				ps.execute();
				System.out.println("상품이 입력되었습니다.");
				System.out.println();
				break;
			case 2:
				sql="select * from tbl_seller";
				ps=con.prepareStatement(sql);
				ResultSet rs=ps.executeQuery();
				System.out.println("---------------------------------------------");
				System.out.println("상품번호\t상품명\t단가\t수량\t금액");
				System.out.println("---------------------------------------------");
				while(rs.next()) {
					sno=rs.getString("sno");
					sname=rs.getString("sname");
					price=rs.getInt("price");
					stock=rs.getInt("stock");
					int tot=price * stock;
					System.out.print(sno + "\t");
					System.out.print(sname + "\t");
					System.out.print(price + "\t");
					System.out.print(stock + "\t");
					System.out.println(tot + "\t");
					System.out.println();
				}
				System.out.println();
				break;
			case 3:
				System.out.println("---------------------------------------------");
				System.out.println("상품수정");
				System.out.println("---------------------------------------------");
				System.out.print("상품번호>");
				sno=s.next();
				sql="select * from tbl_seller where sno=?";
				ps=con.prepareStatement(sql);
				ps.setString(1, sno);
				rs=ps.executeQuery();
				if(rs.next()) {
					sname=rs.getString("aname");
					price=rs.getInt("price");
					stock=rs.getInt("stock");
					System.out.println("상품명:" + sname);
					System.out.println("단가(" + price + ")>");
					price=s.nextInt();
					System.out.println("수량(" + stock + ")>");
					stock=s.nextInt();
				sql="update tbl_seller set price=?, stock=? where sno=?";
				ps=con.prepareStatement(sql);
				ps.setInt(1, price);
				ps.setInt(2, stock);
				ps.setString(3, sno);
				ps.execute();
				System.out.println();
				}else {
					System.out.println("없는 상품입니다.");
				}	
				break;
			case 4:
				run=false;
				System.out.println("프로그램 종료");
				break;
			default:
				System.out.println("잘못된 입력입니다.");
			}
		}

	}

}
